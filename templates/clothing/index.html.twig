{% extends 'base.html.twig' %}

{% block title %}Clothing index{% endblock %}

{% block body %}
    <h1>Clothing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Image</th>
                <th>Size</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clothing in clothings %}
            <tr>
                <td>{{ clothing.id }}</td>
                <td>{{ clothing.price }}</td>
                <td>{{ clothing.image }}</td>
                <td>{{ clothing.size }}</td>
                <td>
                    <a href="{{ path('clothing_show', {'id': clothing.id}) }}">show</a>
                    <a href="{{ path('clothing_edit', {'id': clothing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('clothing_new') }}">Create new</a>
{% endblock %}
